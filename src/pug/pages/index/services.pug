- let services_arr = ["Внутренний аудит", "Экономический анализ", "Ведение финансового и бухгалтерского учёта", "Ведение документооборота", "Оптимизация налоговых и финансовых потоков", "Бизнес-моделирование", "Автоматизация бизнес процессов и администрирование"]

section.services.lazy(data-bg="img/index/services-bg2.webp" data-bg-fallback="img/index/services-bg2.png")
	.site-container
		.services__container
			.services__heading-warpper
				h2.services__title.section-title
					|	Услуги
				+button(null, "Перейти в Услуги")(class="services__button")
		ul.services__list
			for item in services_arr
				li.services__item
					span._top-line.js-direction-lines
					span._bototm-line.js-direction-lines
					a(class="services__item-link" href="/")
						span=item
						+icon("arrow-right-button")(class="services__item-icon" width="40" height="40")
