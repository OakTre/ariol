- let setka_arr = ["Производство композитных гибких связей", "Производство металлических сеток", "Производство композитной арматуры"]
- let mag_arr = ["Размещение наружной рекламы на собственных афишных конструкциях", "Размещение и трансляция рекламных роликов на собственных медиафасадах"]
- let afisha_arr = ["Интернет издание о жизни и событиях в Казани"]
- let kvintes_arr = ["Сдача в аренду коммерческой недвижимости"]

section.projects
	.site-container.projects__container
		h2.projects__title
			|	Проекты в управлении
		.projects__content.site-content-grid
			.site-content-grid__block
				h3.projects__content-legend
					|	Сетка+
				p.projects__content-text
					|	С 2012 года компания занимается производством и продажей металлических сеток широкого ассортиментного ряда, а с 2020 года — композитных материалов под собственным брендом «Мастер Сеткин».
				+button(null, "Перейти", "button_green")(class="projects__content-link")
			.site-content-grid__block
				ul.projects__content-projects.content-projects
					for item, index in setka_arr
						li.content-projects__item
							.content-projects__img-wrapper
								._layer.js-animated-layer
								+pictureLazy(`project-setka${index}.jpg`, item, "/index")(class="content-projects__img")
							p.content-projects__text.site-middle-text=item
		.projects__content.site-content-grid
			.site-content-grid__block
				h3.projects__content-legend
					|	Media Advertising Group
				p.projects__content-text
					|	Один из первых операторов наружной рекламы в Казани. Компания создана в 1998 г и остается эксклюзивным владельцем самой заметной еvent-сети афишных конструкций и тумб «Афиша Казани».
				+button(null, "Перейти", "button_green")(class="projects__content-link")
			.site-content-grid__block
				ul.projects__content-projects.content-projects
					for item, index in mag_arr
						li.content-projects__item
							.content-projects__img-wrapper
								._layer.js-animated-layer
								+pictureLazy(`project-mag${index}.jpg`, item, "/index")(class="content-projects__img")
							p.content-projects__text.site-middle-text=item
		.projects__content.site-content-grid
			.site-content-grid__block
				h3.projects__content-legend
					|	Афиша казани
				p.projects__content-text
					|	Молодой амбициозный проект, созданный в 2021 году. Интернет-портал о городских событиях и интересных местах Казани.
				+button(null, "Перейти", "button_green")(class="projects__content-link")
			.site-content-grid__block
				ul.projects__content-projects.content-projects
					for item, index in afisha_arr
						li.content-projects__item
							.content-projects__img-wrapper
								._layer.js-animated-layer
								+pictureLazy(`project-afisha${index}.jpg`, item, "/index")(class="content-projects__img")
							p.content-projects__text.site-middle-text=item
		.projects__content.site-content-grid
			.site-content-grid__block
				h3.projects__content-legend
					|	Квинтэс Групп
				p.projects__content-text
					|	Аренда торговых мест в подземных переходах и станциях метро в Казани
				+button(null, "Перейти", "button_green")(class="projects__content-link")
			.site-content-grid__block
				ul.projects__content-projects.content-projects
					for item, index in kvintes_arr
						li.content-projects__item
							.content-projects__img-wrapper
								._layer.js-animated-layer
								+pictureLazy(`project-kvintes${index}.jpg`, item, "/index")(class="content-projects__img")
							p.content-projects__text.site-middle-text.mod-max-width=item
